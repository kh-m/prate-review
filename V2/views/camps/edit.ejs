<% include ../partials/headers %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">edit <%= camp.name %></h1>

        <div style="width: 30%; margin: 30px auto">
            <form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.name %>" name="camp[name]">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.img %>" name="camp[img]">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.description %>" name="camp[description]">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">submit</button>
                </div>

            </form>

            <a href="/camps">back to camp grounds.</a>
        </div>


    </div>

</div>



<% include ../partials/footers %>
