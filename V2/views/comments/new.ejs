<% include ../partials/headers %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add comment to <%= camp.name %></h1>

        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">submit</button>
                </div>

            </form>

            <a href="/campgrounds">back to camp grounds.</a>
        </div>


    </div>

</div>



<% include ../partials/footers %>
